<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Quantum Media</title>
  </head>
  <body>
    <h1>🎧 Welcome to Quantum Media</h1>

    <div class="tabs border-b border-gray-300 mb-6">
      <button onclick="showTab('home')" id="tab-home" class="tab px-4 py-2 text-gray-600 hover:text-gray-800 border-b-2 border-blue-500 focus:outline-none">
        Home
      </button>
      <button onclick="showTab('features')" id="tab-features" class="tab px-4 py-2 text-gray-600 hover:text-gray-800 border-b-2 border-transparent hover:border-blue-500 focus:outline-none">
        Features
      </button>
      <button onclick="showTab('contact')" id="tab-contact" class="tab px-4 py-2 text-gray-600 hover:text-gray-800 border-b-2 border-transparent hover:border-blue-500 focus:outline-none">
        Contact
      </button>
    </div>

    <div id="home" class="tab-content">
      <p>Explore internal tools below:</p>
      <div class="space-y-4 mt-6">
        <a href="/login" class="inline-block bg-[#1877F2] text-white px-6 py-3 rounded-lg font-medium hover:bg-[#145DBF]">
          🔐 Staff Login
        </a>
        <a href="/downloads" class="inline-block bg-[#42B72A] text-white px-6 py-3 rounded-lg font-medium hover:bg-[#36A420]">
          📥 Download Center
        </a>
      </div>
    </div>

    <div id="features" class="tab-content hidden">
      <p class="mt-6">Here are some amazing features of Quantum Media!</p>
    </div>

    <div id="contact" class="tab-content hidden">
      <p class="mt-6">Contact us at support@quantummedia.com.</p>
    </div>

    <script>
      function showTab(tabId) {
        document.querySelectorAll('.tab-content').forEach((content) => {
          content.classList.add('hidden');
        });

        document.querySelectorAll('.tab').forEach((tab) => {
          tab.classList.remove('border-blue-500', 'text-gray-800');
          tab.classList.add('text-gray-600');
        });

        document.getElementById(tabId).classList.remove('hidden');
        document.getElementById(`tab-${tabId}`).classList.add('border-blue-500', 'text-gray-800');
      }

      document.addEventListener('DOMContentLoaded', () => {
        showTab('home');
      });
    </script>
  </body>
</html>
